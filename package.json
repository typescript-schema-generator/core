        "nx": "^15.9.1",
        "prettier": "^2.8.7",
        "prettier-plugin-organize-imports": "^3.2.2",
        "ts-jest": "^29.0.5",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5"
    },
    "engines": {
        "yarn": "please-use-npm"
    }
